extends modal_layout

block content
  - let formCategoryAction = category.name !== "" ? `/category/${category._id}/update` : "/category/create"

  form#formCategory(method='POST' action=formCategoryAction name="modalForm" enctype="multipart/form-data").bg-white.p-6.rounded.flex.flex-col.gap-2
    div.flex.flex-col
      label(for='name') Category:
      input(type='text', placeholder='CPU, RAM, Motherboard' name='name' value=category.name).border-black.border.p-1.rounded
      p#name-error.text-sm.text-red-500 
    div.flex.flex-col
      label(for='description') Description:
      textarea(type='text', placeholder='The CPU is the brain of a computer.' name='description').resize-none.border-black.border.p-1.rounded= category.description
      p#description-error.text-sm.text-red-500 
    input(type='file' name='image_upload')
    input(type='hidden', name="date_created" value=category.date_created)
    div.flex.gap-2.pt-4
      button.modalCancel(type='button').bg-red-500.w-fit.px-4.py-1.rounded.text-white Cancel
      button(type='submit').bg-green-500.w-fit.px-4.py-1.rounded.text-white Save

  script(src='/javascripts/category.js')
