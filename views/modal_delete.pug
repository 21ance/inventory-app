extends modal_layout

block content
  - const header = category ? "Category": "Item"
  - const object = category ? category : item

  form#formDelete(method='POST' action=`/${header.toLowerCase()}/${object._id}/delete`).bg-white.p-6.rounded.flex.flex-col.gap-2
    h2 Delete #{header} 
    p.text-red-500= object.name
    div.flex.gap-2.pt-4
      button.modalCancel(type='button').bg-black.w-fit.px-4.py-1.rounded.text-white Cancel
      button(type='submit').bg-red-500.w-fit.px-4.py-1.rounded.text-white Delete

